{
  "manifest_version": 3,
  "name": "Sonos Subs",
  "version": "1.0.5",
  "description": "Enhances the Sonos Web App by displaying song lyrics and more helpful features.",
  "author": "Jeram.ai",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["notifications", "storage", "tabs"],
  "host_permissions": ["http://*:1400/"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://play.sonos.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["patch.js", "10-seconds-of-silence.mp3", "icons/icon.png"],
      "matches": ["https://play.sonos.com/*"]
    }
  ]
}
