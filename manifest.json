{
  "manifest_version": 3,
  "name": "Sonos Subtitles",
  "version": "1.0",
  "description": "Displays lyrics for the current song on the Sonos web player.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://play.sonos.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["patch.js"],
      "matches": ["https://play.sonos.com/*"]
    }
  ]
}
